<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.SquareDefectBaseFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottommenu"
        android:id="@+id/advView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:textColor = "@color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/rightTriButton"
        android:enabled="false"
        android:visibility="gone"
        android:onClick="downButtonPressed"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO"
        android:id="@+id/IsoTriButton"
        android:background="@color/gray"
        android:enabled = "true"
        android:visibility = "gone"
        android:layout_alignTop="@id/rightTriButton"
        android:layout_toEndOf="@id/rightTriButton" />

    <SeekBar
        android:id="@+id/advSeekBar_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:progress="50"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:minHeight="3dp"
        android:maxHeight="3dp"
        android:progressDrawable="@drawable/custom_slider"
        android:thumb="@drawable/purple_scrubber_control"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/advTextView1"
        android:layout_above="@id/advSeekBar_1"
        android:layout_alignStart="@id/advSeekBar_1" />

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/advAcceptButton"
        android:src="@drawable/ic_done_white_24dp"
        app:backgroundTint = "@color/colorPrimary"
        android:layout_above="@id/advView"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/advQuitButton"
        android:src="@drawable/ic_clear_white_24dp"
        app:backgroundTint = "@color/colorPrimaryDark"
        android:layout_above = "@id/advAcceptButton"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/upArrowButton"
        android:src="@drawable/ic_up_white_24dp"
        app:backgroundTint = "@color/colorPrimaryDark"
        android:clickable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/leftArrowButton"
        android:src="@drawable/ic_left_white_24dp"
        app:backgroundTint = "@color/colorPrimaryDark"
        android:clickable="true"
        android:visibility = "gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/rightArrowButton"
        android:src="@drawable/ic_right_white_24dp"
        app:backgroundTint = "@color/colorPrimaryDark"
        android:clickable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:id = "@+id/downArrowButton"
        android:src="@drawable/ic_down_white_24dp"
        app:backgroundTint = "@color/colorPrimaryDark"
        android:clickable="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
