<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SquareDefectBaseFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottommenu"
        android:id="@+id/squareView" />


    <SeekBar
        android:id="@+id/squareSeekBar_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:progress="50"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:minHeight="3dp"
        android:maxHeight="3dp"
        android:progressDrawable="@drawable/custom_slider"
        android:thumb="@drawable/purple_scrubber_control"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="200dp"
        android:layout_alignParentBottom="true"/>

    <SeekBar
        android:id="@+id/squareSeekBar_2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:progress="50"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:minHeight="3dp"
        android:maxHeight="3dp"
        android:progressDrawable="@drawable/custom_slider"
        android:thumb = "@drawable/purple_scrubber_control"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="200dp"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/squareTextView1"
        android:layout_above="@id/squareSeekBar_1"
        android:layout_alignStart="@id/squareSeekBar_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/squareTextView2"
        android:layout_above="@id/squareSeekBar_2"
        android:layout_alignStart="@id/squareSeekBar_2" />


</RelativeLayout>
